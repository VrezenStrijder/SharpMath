<Application x:Class="SharpMath.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SharpMath.UI"
             xmlns:converts="clr-namespace:SharpMath.UI.Converters" 
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- 设置系统滚动条参数 -->
        <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">8</system:Double>
        <system:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">8</system:Double>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converts:AvalonEditDocumentConverter x:Key="AvalonEditDocumentConverter"/>
        <converts:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converts:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Application.Resources>
</Application>
